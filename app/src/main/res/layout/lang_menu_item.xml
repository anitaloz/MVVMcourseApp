<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_lang"
    android:layout_width="110dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:elevation="10dp"
    android:layout_margin="8dp"
    android:padding="0dp"
    >

<ImageView
    android:id="@+id/button_image"
    android:layout_width="110dp"
    android:layout_height="70dp"
    android:src="@drawable/py"
    android:padding="10dp"
    android:background="@drawable/button_square_selector"
    android:contentDescription="@string/button_Python"
    />

<TextView
    android:id="@+id/button_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button_Python"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:fontFamily="@font/montserrat_ace_medium"
    android:layout_marginTop="8dp" />
</LinearLayout>