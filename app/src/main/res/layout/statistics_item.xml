<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_radius_20"
    android:padding="15dp"
    android:layout_marginTop="15dp"
    >

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <com.example.mvvmcourseapp.UIhelper.AnalyticalPieChart
        android:id="@+id/analyticalPieChart_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:pieChartCircleSectionSpace="2"
        app:pieChartCircleStrokeWidth="8dp"
        app:pieChartColors="@array/analyticalPieChartColorArray"
        app:pieChartFontFamily="@font/montserrat_ace_medium"
        app:pieChartTextAmount="@string/analyticalPieChartAmount"
        app:pieChartTextAmountColor="@color/black"
        app:pieChartTextAmountSize="35sp"
        app:pieChartTextDescriptionColor="@color/gray_hint"
        app:pieChartTextDescriptionSize="14sp"
        app:pieChartTextNumberColor="@color/black"
        app:pieChartTextNumberSize="18sp" />


</androidx.constraintlayout.widget.ConstraintLayout>